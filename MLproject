name: bank-client-subscription-classifier

python_env: python_env.yaml

entry_points:
  data_preprocessing:
    command: "python -m src.data.preprocess"

  feature_engineering:
    command: "python src/features/build_features.py"

  train:
    parameters:
      model_type: { type: string, default: "lightgbm" }
    command: "python -m src.models.train_model --model-type {model_type}"

  evaluate:
    parameters:
      model_uri: { type: string }
      test_data_path: { type: string }
    command: "python -m src.models.inference.evaluate --model-uri {model_uri} --test-data-path {test_data_path}"

  predict:
    parameters:
      model_uri: { type: string }
      input_path: { type: string }
      output_path: { type: string, default: "predictions.csv" }
    command: "python -m src.models.inference.predict_model --model-uri {model_uri} --input-path {input_path} --output-path {output_path}"

  main:
    command: "python main.py"
