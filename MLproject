name: bank-client-subscription-classifier

python_env: python_env.yaml

entry_points:
  data_preprocessing:
    command: "python src/preprocess.py"

  feature_engineering:
    command: "python src/preprocess.py"

  train:
    parameters:
      model_type: { type: string, default: "lightgbm" }
      optimize: { type: bool, default: false }
      n_trials: { type: int, default: 10 }
    command: "python src/train.py --model-type {model_type} --optimize {optimize} --n-trials {n_trials}"

  predict:
    parameters:
      model_uri: { type: string }
      model_type: { type: string }
      input_path: { type: string }
      output_path: { type: string }
    command: "python src/predict.py --model-uri {model_uri} --model-type {model_type} --input-path {input_path} --output-path {output_path}"

  main:
    command: "python main.py"
